{
  "name": "neeo_driver-mhub",
  "version": "0.0.1",
  "description": "HDA Mhub driver for NEEO",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nklerk/neeo_driver-mhub.git"
  },
  "keywords": [
    "NEEO",
    "HDA",
    "MHUB"
  ],
  "author": "Niels de Klerk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nklerk/neeo_driver-mhub/issues"
  },
  "homepage": "https://github.com/nklerk/neeo_driver-mhub#readme",
  "dependencies": {
    "hdamhub": "git+https://github.com/nklerk/HDAmhub.git",
    "bluebird": "^3.5.0",
    "glob": "^7.1.2",
    "neeo-sdk": "*",
    "nyc": "^12.0.2"
  },
  "scripts": {
    "test": "nyc mocha --exit \"test/**/*.js\"",
    "jshint": "jshint --show-non-errors --verbose lib/**/*.js",
    "start": "neeo-sdk start",
    "example:forwardaction": "node scripts/forwardaction/index.js",
    "example:recipe": "node scripts/recipe/listAllRecipes.js",
    "clean": "rm -rf ./dist && mkdir -p ./dist",
    "release": "npm run jshint && npm run clean && npm run release:copy && npm run release:changedep",
    "release:copy": "cp -r ./devices ./lib ./neeo-driver-example ./scripts ./test ./dist && cp .travis.yml .jshintrc .gitignore .editorconfig *.md package.json License ./dist",
    "release:changedep": "node ./build/change-dependency.js"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 43,
    "statements": 43,
    "functions": 37,
    "branches": 41,
    "include": [
      "lib/**/*.js"
    ],
    "all": true,
    "reporter": [
      "text-summary",
      "lcov"
    ]
  },
  "neeoSdkOptions": {
    "serverName": "neeo-sdk-examples-server",
    "serverPort": 6336,
    "brainHost": "10.2.1.64",
    "brainPort": ""
  }
}
